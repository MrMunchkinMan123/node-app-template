        if (ex.sets) details += `${ex.sets} sets`;
        if (ex.reps) details += ` √ó ${ex.reps} reps`;
        if (ex.weight && ex.weight > 0) details += ` @ ${ex.weight} lbs`;
        if (ex.duration) details += `${ex.duration} minutes`;
        if (ex.distance && ex.distance > 0) details += ` ‚Ä¢ ${ex.distance} miles`;

        if (currentWorkoutSource === 'feed') {
            return `
                <div class="modal-exercise-item">
                    <div style="flex: 1;">
                        <h4 style="margin-bottom: 0.25rem;">${ex.name}</h4>
                        <p style="color: #6b7280; margin: 0;">${details}</p>
                    </div>
                </div>
            `;
        }

        return `
            <div class="modal-exercise-item" id="challenge-exercise-${index}">
                <div style="flex: 1;">
                    <h4 style="margin-bottom: 0.25rem;">${ex.name}</h4>
                    <p style="color: #6b7280; margin: 0;">${details}</p>
                </div>
                <button class="btn" onclick="markChallengeExerciseComplete(${index})"
                        id="challenge-complete-btn-${index}">
                    ‚úì Complete
                </button>
            </div>
        `;
    }).join('');

    document.getElementById('challenge-modal-exercises').innerHTML = exercisesHtml;
    document.getElementById('challenge-workout-modal').style.display = 'block';
}

