async function markChallengeExerciseComplete(index) {
    const exerciseItem = document.getElementById(`challenge-exercise-${index}`);
    const button = document.getElementById(`challenge-complete-btn-${index}`);

    if (!button || button.disabled) return;
    button.disabled = true;

    if (exerciseItem) {
        exerciseItem.style.opacity = '0.6';
        exerciseItem.style.background = '#d1fae5';
        button.textContent = '‚úì Done';
        button.style.background = 'var(--success)';

        challengeCompletedCount++;

        if (currentWorkoutSource !== 'challenge') {
            return;
        }

        if (currentViewedWorkout && challengeCompletedCount === currentViewedWorkout.exercises.length) {
            showSuccessMessage('üéâ Workout Complete! Great job! üí™');

            const token = localStorage.getItem('jwtToken');

            try {
                if (currentChallengeIdForView) {
                    await fetch(`/api/community/challenge/${currentChallengeIdForView}/complete`, {
                        method: 'POST',
                        headers: {
                            'Authorization': token
                        }
                    });
                }
            } catch (err) {
                console.error('Error completing challenge workout:', err);
            }

            closeChallengeWorkoutModal();
            loadReceivedChallenges();
            loadFeed();
        }
    }
}

